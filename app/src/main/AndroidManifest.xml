<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bcm.sjs.rzxt">

    <!-- 网络通信权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- SD卡写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- SD卡创建与删除权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- VISIBILITY_HIDDEN表示不显示任何通知栏提示的权限 -->
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />
    <!-- DownloadManager -->
    <uses-permission android:name="android.permission.ACCESS_DOWNLOAD_MANAGER" />

    <!-- 退出应用 获取包名权限 -->
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />

    <application
        android:name=".base.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity android:name=".MainActivity" />
        <!--<activity android:name=".LoadingActivity" />-->
        <activity android:name=".LoginActivity" />
        <activity android:name=".my.MemoActivity" />
        <activity android:name=".my.ClearActivity" />
        <activity android:name=".my.SettingActivity" />
        <!--<activity android:name=".my.AppUpadteUtil" />-->
        <activity android:name=".my.AboutActivity" />
        <activity android:name=".EditIPActivity"></activity>
    </application>

</manifest>